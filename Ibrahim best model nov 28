#all models

LOG=LogisticRegression()
RFC=RandomForestClassifier(n_estimators=100)
KNN=KNeighborsClassifier(n_neighbors=10) #gives 0.4 precision
XGB=XGBClassifier()

    
voting_clf = VotingClassifier(
    estimators=[('LOG', LOG),('KNN',KNN),('XGB',XGB),('RFC', RFC)],
    voting='hard')
    
#model to use

model=voting_clf

#cross validation
metrics=['accuracy', 'precision', 'recall']
for m in metrics:
    #can use cross_validate with multiple scores insteadto make this run faster
    cv_results = cross_val_score(model,train_features_prepared,train_labels_prepared,cv=5,scoring=m)
    print('-------------------')
    print('Scoring Metric: ', m)
    print('Scores: ',cv_results)
